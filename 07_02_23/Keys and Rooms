// Keys and Rooms

class Solution {
    boolean [] visited;
    public void dfs(List<List<Integer>> rooms , int n){
        for(int i:rooms.get(n)){
            if(visited[i]==false){
                visited[i]=true;
                dfs(rooms,i);
            }
        }
    }
    public boolean canVisitAllRooms(List<List<Integer>> rooms){
        visited=new boolean[rooms.size()] ;
        visited[0]=true;
        dfs(rooms,0);
        for(boolean b:visited){
            if(!b){
                return false;
            }
        }
        return true;
    }
}
