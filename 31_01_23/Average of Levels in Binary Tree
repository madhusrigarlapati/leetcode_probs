//Average of Levels in Binary Tree

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public List<Double> averageOfLevels(TreeNode root) {
        List<Double> l = new ArrayList<>();          
        Queue<TreeNode> q=new LinkedList<>();
        double sum=0;
        if(root==null){
            return l;
        }
        q.add(root);
        while(!q.isEmpty()){
            sum=0;
            int size=q.size();
            for(int i=1;i<=size;i++){
                TreeNode cur=q.poll();
                sum=sum+(cur.val);
                if(cur.left!=null){
                    q.add(cur.left);
                }
                if(cur.right!=null){
                    q.add(cur.right);
                }
            }
            
            l.add(sum/size);
        }
    return l;
    }
}
